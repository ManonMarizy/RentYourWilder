{%- block text_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
        <div>
            {{- form_label(form) -}}
        </div>
        {{- form_errors(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_help(form) -}}
    </div>
{%- endblock text_row -%}

{%- block choice_widget_expanded -%}
    {% if multiple %}
        <span class="text-info">Choix multiple</span>
    {% else %}
        <span class="text-info">Choix simple</span>
    {% endif %}
    <div {{ block('widget_container_attributes') }} class="mt-3">
        {%- for child in form %}
            <div class="d-flex align-items-center mb-3">
                {{- form_widget(child, { attr: { class: 'mr-2'}}) -}}
                {{- form_label(child, null, {translation_domain: choice_translation_domain, label_attr: { class: 'mb-0'}}) -}}
            </div>
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded -%}
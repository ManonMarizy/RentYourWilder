{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Panier</h1>
    <div class="d-flex flex-wrap justify-content-center">
        {% if wilders | length > 0 %}
            {% for dataWilder in wilders %}
                {% for wilder in dataWilder %}
                    <div class="card mt-3 mr-sm-3" style="width: 18rem;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title">{{ wilder.name }}</h5>
                                <a href="{{ path('cart_remove', {id: wilder.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </div>
                            <ul>
                                {% for skills in wilder.wilderHasSkills %}
                                    <li class="list-unstyled">
                                        {{ skills.skills.name }}:
                                        <span class="d-flex">
                                            {% if skills.rate != 0 %}
                                                {% for i in 0..skills.rate %}
                                                    {% if i!= 0 %}
                                                        <i class="fas fa-star"></i>
                                                    {% endif %}
                                                {% endfor %}
                                                {% for i in 0..(5 - skills.rate) %}
                                                {% if i != 0 %}
                                                    <div class="d-flex align-items-center">
                                                            <i class="far fa-star"></i>
                                                        </div>
                                                {% endif %}
                                            {% endfor %}
                                            {% else %}
                                                {% for i in 1..5 %}
                                                    <div class="d-flex align-items-center">
                                                        <i class="far fa-star"></i>
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                            <a href="#" class="btn btn-primary">DÃ©tails</a>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}

        {% else %}
            <span class="text-info">Il n'y a rien dans votre panier</span>
        {% endif %}
    </div>

    <a href="{{ path('cart_validate') }}" class="btn btn-success mt-4">Valider le panier</a>
{% endblock %}
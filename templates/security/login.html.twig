
{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}
    <div class="ml-4 mr-4 ml-md-5 mr-md-5 mt-lg-5 mb-lg-5">
        <h1 class="text-center mt-4 mb-4">Connexion</h1>
        <form method="POST" action="{{ path('login_check') }}" class="w-100 mb-4">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token(csrf_token_intention) }}">
            <div class="d-flex flex-column w-100 mb-3">
                <label for="_username">Email: </label>
                <input type="text" name="_username" id="_username" class="form-input-border  rounded">
            </div>
            <div class="d-flex flex-column w-100 mb-3">
                <label for="_password">Mot de passe: </label>
                <input type="password" name="_password" id="_password" class="form-input-border  rounded">
            </div>
            <div class="d-flex justify-content-center">
                <button type='submit' class="btn btn-success mt-3">Se connecter</button>
            </div>
        </form>
        <div class="d-flex flex-column align-items-center">
            {%  if errorMessage is not empty %}
                <span class="text-danger mb-4">{{ errorMessage }}</span>
            {% endif %}
            <a href="{{ path('mail_reset_password') }}">Mot de passe oubli√©</a>
        </div>
    </div>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}{{ wilder.name }}{% endblock %}

{% block body %}
    <div class="ml-2 mr-2 mt-4">
        <a href="{{ path('wilder_index') }}">back to list</a>
        <h1 class="mt-3">{{ wilder.name }}</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wilder.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ wilder.description }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img class="avatar-img-admin" src="{{vich_uploader_asset(wilder, 'avatarFile')}}" alt="{{ wilder.avatar }}"></td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ wilder.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsEnable</th>
                <td>{{ wilder.isEnable ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex mb-4">
            <a href="{{ path('wilder_edit', {'id': wilder.id}) }}" class="btn btn-primary mr-4">edit</a>

            {{ include('wilder/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
